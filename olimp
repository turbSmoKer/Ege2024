1)
d = int(input())
v1 = int(input())
v2 = int(input())
t = int(input())
s1 = v1 * t
s2 = v2 * t
x1 = s1 % d
x2 = s2 % d
if (max(x1, x2)-min(x1,x2))>=d/2:
    print(d-max(x1, x2)+min(x1, x2))
else:
    if x1>x2:
        print(x1-x2)
    else:
        print(x2-x1)

2)
n = int(input())
m = int(input())
k = int(input())
t = int(input())
c = m // k
c = c * k
m1 = m - c
if k - m1 < t:
    print(n-k+m1)
elif k - m1 > t:
    print(n)
elif k - m1 == t:
    print(n-t)
