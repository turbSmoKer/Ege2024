s = open('24.txt').readline()
c = 0
m = 0
sub = ''

for u in s:
    sub += u
    if all(sub.count(c) <= 8 for c in 'XYZ') and 'V' not in s and 'X' not in s and 'Z' not in s:
        if len(sub) > m:
            m = len(sub)
            mx = sub
    for t in 'XYZ':
        if sub.count(t) > 8:
            k = sub.find(t)
            sub = sub[k + 1:]
print(m)
